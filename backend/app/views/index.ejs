<%- include('header'); %>

    <form id="orderForm" method="post" action="<%= rootPath %>/submit_study" encType="multipart/form-data">
        <section class="order-form my-4 mx-4">
            <div class="container pt-4">

                <div class="row">

                    <div class="col-12">
                        <img alt="" class="form-image" style="border:0" src="./static/MDAnderson-Master-Logo_Texas_V_NoTag_2CRGB.png" height="50px" data-component="image">
                        <h1 style="float:right">Request Form</h1>
                    </div>
                    <div class="col-12">
                        <!-- <div class="row mt-3  mx-4">
                            <div class="col-12 mb-2">
                                <label class="order-form-label">Study Name</label>
                            </div>
                            <div class="form-group  col-12 col-sm-6">
                                <input required class="order-form-input" name="studyname" id="studyname">
                            </div>
                        </div> -->
                        <div class="row mt-3  mx-4">
                            <div class="col-12 mb-2">
                                <label class="order-form-label">PI Name</label>
                            </div>
                            <div class="form-group  col-12 col-sm-6">
                                <input required class="order-form-input" name="pifirst" id="pifirst" placeholder="First">
                            </div>
                            <div class="form-group  col-12 col-sm-6 mt-2 mt-sm-0">
                                <input required class="order-form-input" name="pilast" id="pilast" placeholder="Last">
                            </div>
                        </div>
                        <div class="row mt-3 mx-4">
                            <div class="form-group col-12 col-sm-6">
                                <label class="order-form-label">PI Email</label>
                                <input required class="order-form-input" name="piemail" id="piemail" placeholder="youremail@mdanderson.org">

                            </div>
                            <div class=" form-group col-12 col-sm-6">
                                <label class="order-form-label">PI Phone</label>
                                <input class="order-form-input" name="piphone" id="piphone" placeholder="xxx-xxx-xxxx">
                            </div>
                        </div>

                        <div class="row mt-3 mx-4">
                            <div class="form-group  col-12 col-sm-6">
                                <label class="order-form-label">Submitter Name</label>
                            </div>
                            <div class="form-group  col-12 col-sm-6">
                                <input type="checkbox" class="form-check-input" name="samePI" id="samePI" value="1">
                                <label for="samePI" class="form-check-label">Same as PI</label>
                            </div>
                            <div class="form-group  col-12 col-sm-6">
                                <input required class="order-form-input" name="submitterfirst" id="submitterfirst" placeholder="First">
                            </div>
                            <div class="form-group  col-12 col-sm-6">
                                <input required class="order-form-input" name="submitterlast" id="submitterlast" placeholder="Last">
                            </div>
                        </div>

                        <div class="row mt-3 mx-4">
                            <div class=" form-group col-12 col-sm-6">
                                <label class="order-form-label">Submitter Email</label>
                                <input required class="order-form-input" name="submitteremail" id="submitteremail" placeholder="youremail@mdanderson.org">

                            </div>
                            <div class=" form-group col-12 col-sm-6">
                                <label class="order-form-label">Submitter Phone</label>
                                <input class="order-form-input" name="submitterphone" id="submitterphone" placeholder="xxx-xxx-xxxx">
                            </div>

                        </div>


                        <div class="row mt-3 mx-4">
                            <div class="form-group  col-12">
                                <label class="order-form-label">Sample Type</label>
                            </div>
                            <div class="form-group col-12">
                                <select name="sample_type" class="form-control" style="width:30%">
                                        <option value="cell">Cells</option>
                                        <option value="blood">Blood</option>
                                        <option value="plasma">Plasma</option>
                                        <option value="tissue">Tissue</option>
                                        <option value="stool">Stool</option>
                                        <option value="stool">Urine</option>
                                        <option value="stool">Other</option>
                                    </select>

                            </div>
                        </div>
                        <div class="row mt-3 mx-4">
                            <div id="uploadFileSection" class="row mt-3 mx-4">
                                <label class="form-label" for="customFile">Upload Sample File (pdata.csv)</label>
                                <input type="file" name="sampleFile" class="form-control" id="customFile" accept=".csv, text/csv" />
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <input type="submit" id="btnSubmit" class="btn btn-dark d-block mx-auto btn-submit" value="Submit">
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>

    </form>

    <%- include('footer'); %>
